<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1>Sign up</h1>
		
		<%= form_for @user do |f| %>
			<%= f.label :name %>
			<%= f.text_field :name, class: "form-control" %>
			<br>
			<%= f.label :email %>
			<%= f.email_field :email, class: "form-control" %>
			<br>
			<%= f.submit "Crate new user", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>
